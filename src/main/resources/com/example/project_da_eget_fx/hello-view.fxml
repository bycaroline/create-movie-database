<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextArea?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.project_da_eget_fx.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Search for movies">
        <font>
            <Font size="26.0" />
        </font></Label>


    <TextField fx:id="textfieldTitle" promptText="Search by title" />
    <Button onAction="#searchByTitle" text="Search" />


    <TextArea fx:id="searchResultTextArea" editable="false" prefHeight="200.0" prefWidth="300.0" />

    <TextField fx:id="textFieldGiveRating" promptText="Rate the movie from 1 to 5 stars and save " />
    <Button onAction="#setRatingAndSave" text="Set rating and save" />

    <Label fx:id="confirmSave" text=" " />

    <TextField fx:id="searchDatabaseYear" promptText="Search in database based on year of release " />
    <Button onAction="#searchByYear" text="Search by Year" />

    <TextField fx:id="searchDatabaseActor" promptText="Search in database based on actor " />
    <Button onAction="#searchByActor" text="Search by Actor" />

    <TextField fx:id="searchDatabaseDirector" promptText="Search in database based on director" />
    <Button onAction="#searchByDirector" text="Search by director" />

    <TextField fx:id="searchDatabaseRating" promptText="Search in database based on rating" />
    <Button onAction="#searchByRating" text="Search by rating" />





</VBox>
